<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>EventBook</display-name>
	<servlet>
		<display-name>Kullanici</display-name>
		<servlet-name>Kullanici</servlet-name>
		<servlet-class>controller.KullaniciControllerServlet</servlet-class>
	</servlet>
	<servlet>
		<display-name>SignUp</display-name>
		<servlet-name>SignUp</servlet-name>
		<servlet-class>controller.SignUp</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Kullanici</servlet-name>
		<url-pattern>/register</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SignUp</servlet-name>
		<url-pattern>/signup</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>register.jsp</welcome-file>
	</welcome-file-list>
</web-app>